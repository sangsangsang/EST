    		 <user-service> 
    			<user name="dragon" password="111" authorities="ROLE_TEACHER"/>
    			<user name="newlec@naver.com" password="111" authorities="ROLE_TEACHER,ROLE_ADMIN"/>
    		</user-service> 
    	</authentication-provider>
    </authentication-manager>    
        
        
        
        
        
        
        
        
        
        
