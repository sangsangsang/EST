<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">
        
        
	<context:component-scan base-package="com.estreller.wbprj.controllers"/>
    <!-- services -->
	<mvc:annotation-driven/>
	<mvc:resources location="/content/" mapping="/content/**"></mvc:resources>
    <!-- more bean definitions for services go here -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"/> <!-- 접두사 경로를 미리 지정해줌으로써 Resolver가찾아준다.-->
		<property name="suffix" value=".jsp"/> <!-- 접미사 -->
	</bean>
	
</beans>